{
  "name": "github-setup-catkin",
  "version": "1.2.0",
  "private": true,
  "description": "Setup catkin action",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "release": "ncc build src/setup-catkin.ts && git add -f dist/",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/betwo/github-setup-catkin.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "betwo",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1"
  },
  "devDependencies": {
    "@actions/io": "^1.0.2",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.19.7",
    "@zeit/ncc": "^0.20.5",
    "husky": "^3.0.9",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "prettier": "^1.17.1",
    "ts-jest": "^26.4.4",
    "typescript": "^3.9.7"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "npm run build && npm run format && npm run release"
    }
  }
}
